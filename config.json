{
  "name": "Bottom Menu",
  "identifier": "bottommenu",
  "type": "A",
  "version": "1.0.4",
  "author": "King of App",
  "category": [
    "menu"
  ],
  "platforms" : [
    "android",
    "ios",
    "windows"
  ],
  "price": 0,
  "subscription": false,
  "canContain": true,
  "icon": "menu",
  "description": {
    "en-US" : "Menu fixed at the bottom of your App. Specially useful when few elements shall be shown",
    "es-ES" : "Menú que se fija en la parte inferior de la App. Especialmente indicado cuando no se quieren mostrar más de cinco elementos."
  },
  "descriptionShort": {
    "en-US" : "Bottomfixed menu",
    "es-ES" : "Menú fijo inferior"
  },
  "documentation": {
    "en-US" : "",
    "es-ES" : ""
  },
  "images" : {
    "list" : "modules/bottommenu/images/bottommenu_list.png",
    "screenshots" : ["modules/bottommenu/images/bottommenu_screenshot01.png",
    "modules/bottommenu/images/bottommenu_screenshot02.png"],
    "popover" : "modules/bottommenu/images/bottommenu_popover.png",
    "banner" : "modules/bottommenu/images/bottommenu_popover.png",
    "logo" : "modules/bottommenu/images/bottommenu_icon.png"
  },
  "showOn": {
    "menu": false,
    "market": true,
    "dragDrop": true
  },
  "requires": [],
  "view": "modules/bottommenu/index.html",
  "files": [
    "modules/bottommenu/controller.js",
    "modules/bottommenu/styles.html"
  ],
  "libs": [
    {
      "bower": {
        "PolymerElements/iron-flex-layout": "^1.3.0"
      },
      "src": "bower_components/iron-flex-layout/iron-flex-layout.html"
    }
  ],
  "scope": {
    "menuItems": [],
    "path": "/bottommenu",
    "showicons": true,
    "showtext": true,
    "showtopborder": true,
    "backgroundColor": "",
    "color": ""
  },
  "config": [
    {
      "type": "repeatSection",
      "key": "menuItems",
      "templateOptions": {
        "label": "Items",
        "btnText": "Add another item to the menu",
        "fields": [{
          "type": "select",
          "key": "path",
          "templateOptions": {
            "label": "Path",
            "required": true
          }
        }, {
          "type": "input",
          "key": "bgImage",
          "templateOptions": {
            "label": "Background Image URL",
            "placeholder": "(Optional)"
          }
        }, {
          "type": "input",
          "key": "bgColor",
          "templateOptions": {
            "label": "Background Color",
            "placeholder": "(Optional)"
          }
        }]
      }
    },
    {
      "type": "checkbox",
      "key": "showicons",
      "templateOptions": {
        "description": "Show menu icons",
        "label": "Menu icons"
      }
    },
    {
      "type": "checkbox",
      "key": "showtext",
      "templateOptions": {
        "description": "Show menu text",
        "label": "Menu text"
      }
    },
    {
      "type": "checkbox",
      "key": "showtopborder",
      "templateOptions": {
        "description": "Show top border",
        "label": "Menu border top"
      }
    }
  ]
}
